<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondoperfil"
    android:orientation="vertical"
    tools:context=".InicioActivity"
    android:weightSum="1">

    <Button
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:id="@+id/imgPerfil"
        android:background="@drawable/logo4"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="Nombre"
        android:id="@+id/txtNombre"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#fffdfffd" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:text="Usuario"
        android:id="@+id/txtUsuario"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ffffec2a"
        android:textSize="20dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#f7b8ff3c"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/listOPciones"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#c3325307"
        android:layout_weight="0.37" />
</LinearLayout>