<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff92e204">
    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:background="@drawable/logo4"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/txtUsuario"
        android:textColorHint="#FFB8B8B8"
        android:background="#ffffffff"
        android:textColor="#ff343434"
        android:hint="   Ejem: carmenjama96"
        android:layout_marginTop="61dp"
        android:text=""
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/txtPass1"
        android:textColorHint="#FFB8B8B8"
        android:background="#ffffffff"
        android:textColor="#ff343434"
        android:text=""
        android:inputType="textPassword"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:id="@+id/txtPass2"
        android:textColorHint="#FFB8B8B8"
        android:background="#ffffffff"
        android:textColor="#ff343434"
        android:text=""
        android:inputType="textPassword"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/txtPass1"
        android:layout_alignStart="@+id/txtPass1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/textView"
        android:layout_marginBottom="37dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/txtUsuario"
        android:layout_alignLeft="@+id/txtUsuario"
        android:layout_alignStart="@+id/txtUsuario"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textSize="16dp"
        android:layout_below="@+id/txtUsuario"
        android:layout_alignLeft="@+id/txtUsuario"
        android:layout_alignStart="@+id/txtUsuario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirme contraseña"
        android:id="@+id/textView3"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:layout_marginTop="27dp"
        android:textSize="16dp"
        android:layout_below="@+id/txtPass1"
        android:layout_alignLeft="@+id/txtPass2"
        android:layout_alignStart="@+id/txtPass2" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Registrarse"
        android:id="@+id/btnRegistro"
        android:background="#383a4824"
        android:textColor="#ffffffff"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acepto los términos y condiciones de uso"
        android:id="@+id/checkBox"
        android:textSize="11.4dp"
        android:checked="false"
        android:textStyle="bold"
        android:layout_below="@+id/txtPass2"
        android:layout_alignLeft="@+id/txtPass2"
        android:layout_alignStart="@+id/txtPass2" />

</RelativeLayout>