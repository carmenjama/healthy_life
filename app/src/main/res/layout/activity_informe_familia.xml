<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoperfil">

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/spinnerFamilia"
        android:background="#98254a00"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#f7b8ff3c"
        android:id="@+id/textView25"
        android:layout_below="@+id/spinnerFamilia"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/listAlimento"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView27"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALIMENTOS NO RECOMENDADOS"
        android:id="@+id/textView27"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ff61a904"
        android:layout_weight="1"
        android:layout_below="@+id/textView25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEstado"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#ff61a904"
        android:layout_weight="1"
        android:layout_below="@+id/listAlimento"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27"
        android:layout_marginTop="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView32"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ff61a904"
        android:layout_weight="1"
        android:text="CalorÃ­as recomendadas"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/txtEstado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtConsu"
        android:textSize="18dp"
        android:textColor="#98040504"
        android:layout_weight="1"
        android:text="Total de Calorias consumidas"
        android:layout_below="@+id/textView33"
        android:layout_alignLeft="@+id/txtReco"
        android:layout_alignStart="@+id/txtReco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtReco"
        android:textSize="18dp"
        android:textColor="#98040504"
        android:layout_weight="1"
        android:text="Total de Calorias consumidas"
        android:layout_below="@+id/textView32"
        android:layout_alignLeft="@+id/textView32"
        android:layout_alignStart="@+id/textView32" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#f7b8ff3c"
        android:id="@+id/textView33"
        android:layout_below="@+id/txtReco"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>