<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iconLista"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="22dp"
        android:animateLayoutChanges="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mi Familia"
        android:id="@+id/textLista"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignBottom="@+id/iconLista"
        android:layout_toRightOf="@+id/iconLista"
        android:layout_toEndOf="@+id/iconLista"
        android:layout_marginBottom="14dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#fffdfffd"
        android:animateLayoutChanges="true"/>
</RelativeLayout>